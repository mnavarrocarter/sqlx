{
  "name": "mnavarro/sqlx",
  "description": "Simple, low-overhead relational database toolkit for modern PHP applications",
  "minimum-stability": "stable",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Matias Navarro-Carter",
      "email": "mnavarrocarter@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-pdo": "*",
    "castor/context": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "vimeo/psalm": "^4.27",
    "friendsofphp/php-cs-fixer": "^3.11"
  },
  "autoload": {
    "psr-4": {
      "MNC\\": "src"
    },
    "files": ["functions/__autoload.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "MNC\\": "tests"
    }
  },
  "config": {
    "platform": {
      "php": "8.0"
    }
  }
}
